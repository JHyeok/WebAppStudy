<!DOCTYPE html>
<html>
    <head>
        <title>
            <%= title %>
        </title>
    </head>
    <body>
        <% for(var i in messages) { %>
        <div class="flash"><%= messages[i] %></div>
        <% } %>
        <form action="login" method="post">
            <div>
                <label>UserId :</label>
                <input type="text" name="userid">           
            </div>
            <div>
                <label>Password :</label>
                <input type="password" name="password">         
            </div>
            <div>
                <input type="submit" value="LogIn">
            </div>
        </form>
    </body>
</html>
